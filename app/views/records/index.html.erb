<h1>Listing records</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Provider</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><h2><%= link_to record.title, record %></h2>
    <%= record.description %></td>
    <td><%= link_to record.provider.name, record.provider %></td>
    <td><%= link_to 'Edit', edit_record_path(record) %></td>
    <td><%= link_to 'Destroy', record, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

